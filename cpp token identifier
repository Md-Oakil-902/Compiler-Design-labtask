#include <iostream>
#include <fstream>
#include <sstream>
#include <vector>
#include <cctype>
using namespace std;

// List of keywords
vector<string> keywords = {
    "int", "float", "double", "char", "if", "else", "for", "while",
    "return", "break", "continue", "void", "long", "short", "bool"
};

// Check if token is keyword
bool isKeyword(const string &token) {
    for (auto &k : keywords) {
        if (k == token)
            return true;
    }
    return false;
}

// Check if identifier (starts with letter or _)
bool isIdentifier(const string &token) {
    if (!isalpha(token[0]) && token[0] != '_')
        return false;

    for (char c : token) {
        if (!isalnum(c) && c != '_')
            return false;
    }
    return true;
}

// Check if number literal
bool isNumber(const string &token) {
    for (char c : token) {
        if (!isdigit(c))
            return false;
    }
    return true;
}

// Operators list
vector<string> operators = { "+", "-", "*", "/", "=", "==", ">", "<", ">=", "<=", "!=" };

// Check if operator
bool isOperator(const string &token) {
    for (auto &op : operators) {
        if (op == token)
            return true;
    }
    return false;
}

int main() {
    ifstream file("input.txt");
    if (!file.is_open()) {
        cout << "Error opening file!" << endl;
        return 0;
    }

    string line, word;

    cout << "TOKENS FOUND:\n\n";

    while (getline(file, line)) {
        string token = "";

        for (int i = 0; i < line.length(); i++) {
            char c = line[i];

            // If space or punctuation â†’ process token
            if (isspace(c) || ispunct(c)) {
                if (!token.empty()) {
                    if (isKeyword(token))
                        cout << token << " -> KEYWORD\n";
                    else if (isNumber(token))
                        cout << token << " -> NUMBER LITERAL\n";
                    else if (isIdentifier(token))
                        cout << token << " -> IDENTIFIER\n";
                    else
                        cout << token << " -> UNKNOWN TOKEN\n";

                    token = "";
                }

                // Check punctuation as separate token
                if (ispunct(c)) {
                    string op(1, c);

                    if (isOperator(op))
                        cout << op << " -> OPERATOR\n";
                    else
                        cout << op << " -> PUNCTUATION\n";
                }
            }
            else {
                token += c;
            }
        }

        // Process leftover token
        if (!token.empty()) {
            if (isKeyword(token))
                cout << token << " -> KEYWORD\n";
            else if (isNumber(token))
                cout << token << " -> NUMBER LITERAL\n";
            else if (isIdentifier(token))
                cout << token << " -> IDENTIFIER\n";
            else
                cout << token << " -> UNKNOWN TOKEN\n";
        }
    }

    file.close();
    return 0;
}
