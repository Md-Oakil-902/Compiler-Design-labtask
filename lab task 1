#include <iostream>
#include <string>
using namespace std;

bool numericConstantCheck(string userInput) {
    
    for (int i = 0; i < userInput.length(); i++) {
        char c = userInput[i];
        if (c < '0' || c > '9') {
            return false;
        }
    }
    return true;  
}  
int main() {
    string userInput;

    cout << "Enter your input to check if it's numeric or not: ";
    cin >> userInput;

    if (numericConstantCheck(userInput)) {
        cout << "Input is numeric" << endl;
    } else {
        cout << "Input is not numeric" << endl;
    }

    return 0;
}

